#include<stdio.h>

void main()
{
    int arr1[100],i,n,p,inval;
    printf("Insert the new value in sorted array\n");
    printf("\n------------------------\n");
    
    printf("input the size of the array\n");
    scanf("%d",&n);
    
    printf("Input the elemmnts in array in scending order:\n");
    for(i=0;i<n;i++){
        printf("element-%d \n",i);
        scanf("%d",&arr1[i]);
    }
    
    printf("Input value to be inserted: \n");
    scanf("%d",&inval);
    
    printf("current array lis is \n");
    for(i=0;i<n;i++){
        printf("% 5d",arr1[i]);
    }
    for(i=0;i<n;i++){
        if(inval<arr1[i]){
            p=i;
            break;
        }
    }
    for(i=0;i>=p;i--)
        arr1[i]=arr1[i-1];
        
        arr1[p]=inval;
        
    printf("After insertion the list is:\n");
    for(i=0;i<=n;i++)
        printf("% 5d ",arr1[i]);
        printf("\n");
    
        
    }
